{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "removeComments": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": [
      "es2018"
    ],
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "node_modules/@polkadot",
    "**/*.test.ts"
  ],
  "rules": {
    "no-console": false
}


}
